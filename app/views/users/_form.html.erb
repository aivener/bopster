<%= form_for(@user, url: user_path(@user), :method => :put) do |f| %>
  


  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name, type: "text", placeholder: "Name", class: "form-control" %>

	<br>

  <%= f.label :username %><br>
    <%= f.text_field :username, type: "text", placeholder: "Username", class: "form-control"%>
  
  <br>

    <%= f.label :email %><br>
    <%= f.text_field :email, type: "text", placeholder: "Email", class: "form-control"%>
	
	<br>

  <%= f.label :age %><br>
    <%= f.text_field :age, type: "text", placeholder: "Age", class: "form-control"%>
  
  <br>

  <%= f.label :bio %><br>
    <%= f.text_field :bio, type: "text", placeholder: "Bio", class: "form-control"%>
  
  <br>

  

  </div>

  <div class="actions">
    <%= f.submit :class => "btn btn-embossed btn-primary"%>
  </div>
<% end %>