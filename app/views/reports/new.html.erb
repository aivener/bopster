<span style="font-size: 23px;">Add progress to</span> <a href="/goals" style="font-size: 31px; font-weight: bold;"><%= Goal.find(params[:report_goal_id]).title %></a><br>
<% if @report.errors.any? %>
	<div class="errors">
		<ul>
			<%@report.errors.full_messages.each do |message| %>
			<li><%=message%></li>
			<%end%>
		</ul>
	</div>
<%end%>
<%= form_for(@report, :url => '/reports') do |f| %>
	<div id="report-fields">
		<div id="amount-field"><%= f.text_field :amount, class: "form-control", placeholder: "Amount" %></div>
		<div id="unit-field"><%= "  " + Goal.find(params[:report_goal_id]).unit %></div>
	</div>
	<%= f.hidden_field :goal_id, :value => params[:report_goal_id] %>
	<%= f.submit "Report my Progress", class: "btn btn-primary btn-embossed" do%>
		<div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
			<div class="modal-dialog modal-sm">
				<div class="modal-content">
					...
				</div>
			</div>
		</div>
	<% end %>

<% end %>
