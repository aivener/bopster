<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  
  <%= devise_error_messages! %>


    <label class="radio">
      <input id="user_role_parent" type="radio" name="user[role]" value="parent" data-toggle="radio" checked>
      Parent
    </label>

    <label class="radio">
      <input id="user_role_kid" type="radio" name="user[role]" value="kid" data-toggle="radio">
      Kid
    </label>

    <!-- <div><%= f.radio_button :role, "parent" %>Parent</div><br>

    <div><%= f.radio_button :role, "kid" %>Kid</div><br> -->

  		<%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "Name" %>

      <%= f.text_field :username, autocomplete: "off", class: "form-control", placeholder: "Username" %> 

  		<%= f.email_field :email, autofocus: false, class: "form-control", placeholder: "Email" %>

    	<%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>

    	<%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm password" %>

      <%= f.text_field :age,  class: "form-control", placeholder: "Age" %>

      <%= f.text_field :gender,  class: "form-control", placeholder: "Gender" %>



  	<div><%= f.submit "Sign up!", class: "btn btn-primary btn-embossed" %></div>

<% end %>
<br><br>

<%= render "devise/shared/links" %>
